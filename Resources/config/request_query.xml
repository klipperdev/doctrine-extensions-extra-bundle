<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Filter Validator -->
        <service id="klipper_doctrine_extensions_extra.request_query.filterable.filter_validator" class="Klipper\Component\DoctrineExtensionsExtra\Filterable\FilterValidator" public="true">
            <argument type="service" id="klipper_metadata.manager" />
            <argument type="service" id="klipper_doctrine_extensions_extra.request_query.filterable.parser" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="translator" />
            <argument type="service" id="klipper_doctrine_extensions_extra.request_query.filterable.expression_language" />
        </service>

        <service id="Klipper\Component\DoctrineExtensionsExtra\Filterable\FilterValidator" alias="klipper_doctrine_extensions_extra.request_query.filterable.filter_validator" />

        <!-- Request Pagination Query -->
        <service id="klipper_doctrine_extensions_extra.request_query.pagination" class="Klipper\Component\DoctrineExtensionsExtra\Pagination\RequestPaginationQuery" public="true">
            <argument type="service" id="request_stack" />
            <argument>%klipper_doctrine_extensions_extra.pagination.default_size%</argument>
            <argument>%klipper_doctrine_extensions_extra.pagination.max_size%</argument>
        </service>

        <service id="Klipper\Component\DoctrineExtensionsExtra\Pagination\RequestPaginationQuery" alias="klipper_doctrine_extensions_extra.request_query.pagination" />
    </services>
</container>
